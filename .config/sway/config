# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym {
  # multimedia keys
  XF86AudioRaiseVolume        exec "pulseaudio-ctl up"
  XF86AudioLowerVolume        exec "pulseaudio-ctl down"
  XF86AudioMute               exec "pulseaudio-ctl mute"

  XF86AudioPlay               exec "$HOME/.config/pianobar/control-pianobar p"
  XF86AudioStop               exec "$HOME/.config/pianobar/control-pianobar quit"
  XF86AudioPrev               exec "$HOME/.config/pianobar/control-pianobar history"
  XF86AudioNext               exec "$HOME/.config/pianobar/control-pianobar next"
  Shift+XF86AudioPrev         exec "$HOME/.config/pianobar/control-pianobar previousstation"
  Shift+XF86AudioNext         exec "$HOME/.config/pianobar/control-pianobar nextstation"



  XF86MonBrightnessDown exec "xbacklight -dec 10"
  XF86MonBrightnessUp   exec "xbacklight -inc 10"

  # start a terminal
  $mod+Return           exec "alacritty"
  $mod+Shift+Return     exec "$HOME/.config/sway/scripts/remoteterm"
  $mod+g                exec "systemd-cat --identifier=qutebrowser /usr/bin/qutebrowser"
  $mod+Shift+g          exec "$HOME/.config/sway/scripts/browsermenu"

  # kill focused window
  $mod+Shift+q          kill

  #run dialog
  $mod+d                exec "j4-dmenu-desktop --dmenu='"$dmenu"' --term='alacritty'"

  $mod+slash            exec "swayprop"

  # change focus
  $mod+j                focus left
  $mod+k                focus down
  $mod+l                focus up
  $mod+semicolon        focus right

  # alternatively, you can use the cursor keys:
  $mod+Left             focus left
  $mod+Down             focus down
  $mod+Up               focus up
  $mod+Right            focus right

  # move focused window
  $mod+Shift+j          move left
  $mod+Shift+k          move down
  $mod+Shift+l          move up
  $mod+Shift+semicolon  move right

  # alternatively, you can use the cursor keys:
  $mod+Shift+Left       move left
  $mod+Shift+Down       move down
  $mod+Shift+Up         move up
  $mod+Shift+Right      move right

  # split in horizontal orientation
  $mod+h                split h

  # split in vertical orientation
  $mod+v                split v

  # enter fullscreen mode for the focused container
  $mod+f                fullscreen

  # change container layout (stacked, tabbed, toggle split)
  $mod+s                layout stacking
  $mod+w                layout tabbed
  $mod+e                layout toggle split

  # toggle tiling / floating
  $mod+Shift+space      floating toggle

  # change focus between tiling / floating windows
  $mod+space            focus mode_toggle

  # focus the parent container
  $mod+a                focus parent

  # focus the child container
  #$mod+d               focus child

  # switch to workspace
  $mod+1                workspace 1
  $mod+2                workspace 2
  $mod+3                workspace 3
  $mod+4                workspace 4
  $mod+5                workspace 5
  $mod+6                workspace 6
  $mod+7                workspace 7
  $mod+8                workspace 8
  $mod+9                workspace 9
  $mod+0                workspace 10

  # move focused container to workspace
  $mod+Shift+1          move container to workspace 1
  $mod+Shift+2          move container to workspace 2
  $mod+Shift+3          move container to workspace 3
  $mod+Shift+4          move container to workspace 4
  $mod+Shift+5          move container to workspace 5
  $mod+Shift+6          move container to workspace 6
  $mod+Shift+7          move container to workspace 7
  $mod+Shift+8          move container to workspace 8
  $mod+Shift+9          move container to workspace 9
  $mod+Shift+0          move container to workspace 10

  # reload the configuration file
  $mod+Shift+c          reload
  # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
  $mod+Shift+r          restart
  # exit i3 (logs you out of your X session)
  $mod+Shift+e          exec "swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
}

# control pianobar
bindsym $mod+p          mode "pianobar"
mode "pianobar" bindsym {
  p                     exec "$HOME/.config/pianobar/control-pianobar.sh p"; mode "default"
  q                     exec "$HOME/.config/pianobar/control-pianobar.sh quit"; mode "default"
  h                     exec "$HOME/.config/pianobar/control-pianobar.sh history"; mode "default"
  n                     exec "$HOME/.config/pianobar/control-pianobar.sh next"; mode "default"
  Left                  exec "$HOME/.config/pianobar/control-pianobar.sh previousstation"; mode "default"
  j                     exec "$HOME/.config/pianobar/control-pianobar.sh previousstation"; mode "default"
  Right                 exec "$HOME/.config/pianobar/control-pianobar.sh nextstation"; mode "default"
  semicolon             exec "$HOME/.config/pianobar/control-pianobar.sh nextstation"; mode "default"
  plus                  exec "$HOME/.config/pianobar/control-pianobar.sh love"; mode "default"
  KP_Add                exec "$HOME/.config/pianobar/control-pianobar.sh love"; mode "default"
  minus                 exec "$HOME/.config/pianobar/control-pianobar.sh ban"; mode "default"
  KP_Subtract           exec "$HOME/.config/pianobar/control-pianobar.sh ban"; mode "default"
  slash                 exec "$HOME/.config/pianobar/control-pianobar.sh current"; mode "default"
  Shift+question        exec "$HOME/.config/pianobar/control-pianobar.sh explain"; mode "default"
  s                     exec "$HOME/.config/pianobar/control-pianobar.sh switchstation"; mode "default"
  d                     exec "$HOME/.config/pianobar/control-pianobar.sh download"; mode "default"
  Return                mode "default"
  Escape                mode "default"
}

# resize window (you can also use the mouse for that)
bindsym $mod+r          mode "resize"
mode "resize" bindsym {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  j         resize shrink width  10 px or 10 ppt
  k         resize grow   height 10 px or 10 ppt
  l         resize shrink height 10 px or 10 ppt
  semicolon resize grow   width  10 px or 10 ppt

  # same bindings, but for the arrow keys
  Left  resize shrink width  10 px or 10 ppt
  Down  resize grow   height 10 px or 10 ppt
  Up    resize shrink height 10 px or 10 ppt
  Right resize grow   width  10 px or 10 ppt

  # Fine adjustments
  Shift+Left  resize shrink width  1 px or 1 ppt
  Shift+Down  resize grow   height 1 px or 1 ppt
  Shift+Up    resize shrink height 1 px or 1 ppt
  Shift+Right resize grow   width  1 px or 1 ppt

  # back to normal: Enter or Escape
  Return mode "default"
  Escape mode "default"
}

bindsym $mod+Print          mode "screenshot-save"
mode "screenshot-save" bindsym {
  d exec "grimshot --notify save screen"; mode "default"
  m exec "grimshot --notify save output"; mode "default"
  w exec "grimshot --notify save active"; mode "default"
  a exec "grimshot --notify save area"; mode "default"
  s exec "grimshot --notify save window"; mode "default"

  Return mode "default"
  Escape mode "default"
}

bindsym $mod+Shift+Print          mode "screenshot-copy"
mode "screenshot-copy" bindsym {
  d exec "grimshot --notify copy screen"; mode "default"
  m exec "grimshot --notify copy output"; mode "default"
  w exec "grimshot --notify copy active"; mode "default"
  a exec "grimshot --notify copy area"; mode "default"
  s exec "grimshot --notify copy window"; mode "default"

  Return mode "default"
  Escape mode "default"
}

bindsym $mod+Escape          mode "passthrough"
mode "passthrough" bindsym {
  $mod+Escape mode "default"
}

